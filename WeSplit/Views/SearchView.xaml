            Grid.Row="0"
            Background="#333E50"
            LastChildFill="True">
            <Grid Margin="0,0,26,0" DockPanel.Dock="Right">
                <Button
                    Width="56"
                    Height="38"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Background="#fff"
                    BorderBrush="#000"
                    BorderThickness="1"
                    Click="BtnSearch_Click"
                    Foreground="#000"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="Search">
                    <materialDesign:PackIcon Kind="Magnify">
                        <materialDesign:PackIcon.LayoutTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.4" ScaleY="1.4" />
                        </materialDesign:PackIcon.LayoutTransform>
                    </materialDesign:PackIcon>
                </Button>
            </Grid>

            <TextBox
                x:Name="SearchBox"
                Height="38"
                Margin="26,0,16,0"
                Padding="0,-2,0,0"
                VerticalContentAlignment="Bottom"
                materialDesign:HintAssist.Background="#fff"
                materialDesign:HintAssist.Foreground="#000"
                materialDesign:HintAssist.Hint="Search"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="16"
                materialDesign:TextFieldAssist.UnderlineBrush="#000"
                Background="#fff"
                FontSize="14"
                Foreground="#000"
                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" />
        </DockPanel>

