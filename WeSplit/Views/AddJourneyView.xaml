                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="35"
                    FontWeight="Bold"
                    Text="Tên chuyến đi" 
                    HorizontalAlignment="Center"/>

                <TextBox
                    x:Name="ProductName"
                    Height="60"
                    Margin="90,10,90,0"
                    Padding="10,6,0,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Foreground="#333E50"
                    materialDesign:HintAssist.Hint="Tên chuyến đi của bạn"
                    materialDesign:TextFieldAssist.UnderlineBrush="#333E50"
                    Background="#333E50"
                    BorderThickness="0"
                    FontSize="18"
                    FontWeight="Regular"
                    Foreground="#dadfed"
                />

                <!--danh sach thanh vien-->
                <StackPanel 
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    >
                    <StackPanel Margin="110,0,0,0">
                        <TextBlock
                            Margin="20,20,0,0"
                            FontSize="20"
                            Text="Tên thành viên"
                            TextAlignment="Center"/>
                        <TextBox 
                            x:Name="UserName"
                            Height="38"
                            Margin="20,5,0,0"
                            materialDesign:HintAssist.Foreground="#F75C03"
                            materialDesign:HintAssist.Hint="Tên thành viên"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F75C03"
                            Background="#333E50"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Regular"
                            Foreground="#dadfed" Width="178"
                            Padding="5,0,0,0"   />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock
                            Margin="20,20,0,0"
                            FontSize="20"
                            Text="Số điện thoại"
                            TextAlignment="Center"/>
                        <TextBox 
                            x:Name="Tel"
                            Height="38"
                            Margin="20,5,0,0"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Foreground="#F75C03"
                            materialDesign:HintAssist.Hint="Tên thành viên"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F75C03"
                            Background="#333E50"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Regular"
