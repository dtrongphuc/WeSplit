                            FontWeight="Regular"
                            Foreground="#dadfed"
                            Padding="5,0,0,0"   
                            Width="165"/>
                    </StackPanel>
                    
                </StackPanel>
                <Button
                    Height="44"
                    Margin="132,15,460.4,0"
                    Background="Snow"
                    BorderThickness="0"
                    Click="BtnAddIngredientsField_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="25" Source="/Resource/Icons/add.png" />
                        <TextBlock
                            Padding="15,0,0,0"
                            FontSize="18"
                            Text="Thêm khoản chi" 
                            Foreground="Black"/>

                    </StackPanel>
                </Button>
                <!--</StackPanel>-->
                <Button
                    x:Name="Submit"
                    Width="140"
                    Height="40"
                    Margin="0,30"
                    Background="#F75C03"
                    Click="Add_Click"
                    Content="Hoàn thành" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
