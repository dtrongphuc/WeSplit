                            TextAlignment="Center"/>
                        <TextBox 
                            x:Name="money"
                            Height="38"
                            Margin="20,5,0,0"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Foreground="#F75C03"
                            materialDesign:HintAssist.Hint="Tên thành viên"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F75C03"
                            Background="#333E50"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Regular"
                            Foreground="#dadfed" 
                            Padding="5,0,0,0"   
                            Width="165"/>
                    </StackPanel>
                </StackPanel>
                <Button
                    Height="44"
                    Margin="132,15,460.4,0"
                    Background="Snow"
                    BorderThickness="0"
                    Click="BtnAddIngredientsField_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="25" Source="/Resource/Icons/add.png" />
                        <TextBlock
                            Padding="15,0,0,0"
                            FontSize="18"
                            Text="Thêm thành viên" 
                            Foreground="Black"/>

                    </StackPanel>
                </Button>
                <!--//dah sách các khoản chi-->
                <StackPanel 
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    >
                    <StackPanel Margin="110,0,0,0">
                        <TextBlock
                            Margin="20,20,0,0"
                            FontSize="20"
                            Text="Tên khoản chi"
                            TextAlignment="Center"/>
                        <TextBox 
                            x:Name="ExpensesName"
                            Height="38"
                            Margin="20,5,0,0"
                            materialDesign:HintAssist.Foreground="#F75C03"
                            materialDesign:HintAssist.Hint="Tên thành viên"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F75C03"
                            Background="#333E50"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Regular"
                            Foreground="#dadfed"
                            Padding="5,0,0,0"   
                            Width="178"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock
                            Margin="20,20,0,0"
                            FontSize="20"
                            Text="Số tiền"
                            TextAlignment="Center"/>
                        <TextBox 
                            x:Name="Expenses" 
                            Height="38"
                            Margin="20,5,0,0"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Foreground="#F75C03"
                            materialDesign:HintAssist.Hint="Tên thành viên"
                            materialDesign:TextFieldAssist.UnderlineBrush="#F75C03"
                            Background="#333E50"
                            BorderThickness="0"
